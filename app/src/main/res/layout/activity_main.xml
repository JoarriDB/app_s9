<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- TÃTULO PRINCIPAL -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± App S9 - SharedPreferences"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#2196F3"
                android:padding="16dp"
                android:background="#E3F2FD"
                android:layout_marginBottom="24dp" />

            <!-- SECCIÃ“N 1: CONTADOR DE VISITAS -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSection1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¢ 1. Contador de visitas"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="#4CAF50" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contar cuÃ¡ntas veces se ha abierto la app."
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/textViewVisitCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¢ La app se ha abierto 0 veces"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="#E3F2FD"
                        android:textColor="#2196F3" />

                    <Button
                        android:id="@+id/buttonResetCounter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”„ Resetear Contador"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="#2196F3"
                        android:padding="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SECCIÃ“N 2: PERFIL DE USUARIO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSection2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¤ 2. Perfil de Usuario"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="#FF9800" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Campos: nombre, edad, email."
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:textColor="#666666" />

                    <EditText
                        android:id="@+id/editTextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ðŸ‘¤ Nombre completo"
                        android:inputType="textPersonName"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:background="#FAFAFA"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextAge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ðŸŽ‚ Edad"
                        android:inputType="number"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:background="#FAFAFA"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/editTextEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ðŸ“§ Email"
                        android:inputType="textEmailAddress"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp"
                        android:background="#FAFAFA"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <Button
                            android:id="@+id/buttonSaveProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’¾ Guardar"
                            android:layout_marginEnd="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="#4CAF50"
                            android:textColor="@android:color/white"
                            android:padding="12dp" />

                        <Button
                            android:id="@+id/buttonLoadProfile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ“‚ Cargar"
                            android:layout_marginStart="8dp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:background="#FF9800"
                            android:textColor="@android:color/white"
                            android:padding="12dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¡ Los datos se guardan en SharedPreferences"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:textColor="#666666"
                        android:gravity="center" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SECCIÃ“N 3: MODO OSCURO/CLARO -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardSection3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ™ 3. Modo Oscuro/Claro"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"
                        android:textColor="#9C27B0" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Switch para cambiar entre modo claro y oscuro. El cambio se aplica inmediatamente y se guarda la preferencia."
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp"
                        android:textColor="#666666" />

                    <LinearLayout
                        android:id="@+id/switchContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp"
                        android:padding="12dp"
                        android:background="#F3E5F5">

                        <TextView
                            android:id="@+id/switchLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŒ™ Modo Oscuro:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#9C27B0" />

                        <Switch
                            android:id="@+id/switchDarkMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="1.3"
                            android:scaleY="1.3" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textViewModeStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸ Modo Claro: Fondo blanco, texto negro"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="#E8F5E8"
                        android:textColor="#4CAF50" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>